  '<script src="/dependencies/datatables/media/js/jquery.dataTables.min.js"></script>\n' +
  '<script src="/dependencies/datatables/media/js/dataTables.bootstrap4.min.js"></script>\n' +
  '<script src="/dependencies/datatables/extras/TableTools/Buttons-1.4.2/js/dataTables.buttons.min.js"></script>\n' +
  '<script src="/dependencies/datatables/extras/TableTools/Buttons-1.4.2/js/buttons.bootstrap4.min.js"></script>\n' +
  '<script src="/dependencies/datatables/extras/TableTools/Buttons-1.4.2/js/buttons.html5.min.js"></script>\n' +
  '<script src="/dependencies/datatables/extras/TableTools/Buttons-1.4.2/js/buttons.print.min.js"></script>\n' +
  '<script src="/dependencies/datatables/extras/TableTools/JSZip-2.5.0/jszip.min.js"></script>\n' +
  '<script src="/dependencies/datatables/extras/TableTools/pdfmake-0.1.32/pdfmake.min.js"></script>\n' +
  '<script src="/dependencies/datatables/extras/TableTools/pdfmake-0.1.32/vfs_fonts.js"></script>\n' +
  '<script src="/js/nfv-bms/datatable.js"></script>\n' +
  '<script src="/js/nfv-bms/manage-qos-metrics.js"></script>\n');

block('localCustomStyles', '<link rel="stylesheet" href="/dependencies/select2/css/select2.css" />\n' +
  '<link rel="stylesheet" href="/dependencies/select2-bootstrap-theme/select2-bootstrap.min.css" />\n' +
  '<link rel="stylesheet" href="/dependencies/datatables/media/css/dataTables.bootstrap4.css" />\n');
%>
<header class="page-header">
  <h2>Manage QoS Metrics</h2>

  <div class="right-wrapper text-right" style="margin-right: 20px">
    <ol class="breadcrumbs">
      <li>
        <a href="/nfv-bms/">
          <i class="fas fa-home"></i>
        </a>
      </li>
      <li><span>Manage SLAs &amp; SLOs</span></li>
      <li><span>QoS Metrics</span></li>
    </ol>

  </div>
</header>

<!-- start: page -->
<section class="card">
  <header class="card-header">
    <div class="card-actions">
      <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
      <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
    </div>

    <h2 class="card-title">Quality of Service Metrics</h2>
  </header>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6">
        <div class="mb-3">
          <button id="addToTable" class="btn btn-primary">Add <i class="fas fa-plus"></i></button>
        </div>
      </div>
    </div>
    <table class="table table-bordered table-striped mb-0" id="datatable-editable"
           data-url="http://<%=nfv_bms_address%>:<%=nfv_bms_port%>/api/quality_metrics">
      <thead>
      <tr>
        <th class="id-column">ID</th>
        <th>Name</th>
        <th>Quality Metric Type</th>
        <th>Upper Bound</th>
        <th>Lower Bound</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>


      </tbody>
    </table>
  </div>
</section>
<!-- end: page -->

<div id="dialog" class="modal-block mfp-hide">
  <section class="card">
    <header class="card-header">
      <h2 class="card-title">Are you sure?</h2>
    </header>
    <div class="card-body">
      <div class="modal-wrapper">
        <div class="modal-text">
          <p>Are you sure that you want to delete this row?</p>
        </div>
      </div>
    </div>
    <footer class="card-footer">
      <div class="row">
        <div class="col-md-12 text-right">
          <button id="dialogConfirm" class="btn btn-primary">Confirm</button>
          <button id="dialogCancel" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </footer>
  </section>
</div>

